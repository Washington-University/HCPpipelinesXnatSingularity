	yum -y update && yum -y upgrade
	yum install -y wget tar.x86_64 gzip zip unzip git which bzip2 bc hostname java tcsh libgomp libGLU libXmu gcc qt5-qtbase mesa-dri-drivers mesa-libGL-devel
