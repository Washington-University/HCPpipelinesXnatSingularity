	bash /export/fsl-5.0.11/etc/fslconf/post_install.sh -f /export/fsl-5.0.11
	rm fsl-5.0.11-centos7_64.tar.gz
	shopt -s extglob
	rm -rf /export/fsl-5.0.11/data/!(standard)
	rm -rf /export/fsl-5.0.11/doc/*
